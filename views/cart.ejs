<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

</head>
<body class="bg-white">

    <div class="z-20">
        <%- include('partials/header') %>
    </div>
    <div class="flex">
           
        <div class="flex-1 p-4 ml-0 md:ml-64 lg:pr-32">
            <h1 class="text-3xl font-semibold mb-8">Cart.</h1>
           
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10">
                <% cart.forEach(product => { %>
                    <div class="max-w-xs mx-auto">
                        <div class="w-full relative h-58 flex items-center justify-center" style="background-color: <%= product.bgcolor %>;">
                            <% if (product.discount){ %>
                                <div class="top-0 right-0 absolute text-green-700 text-semibold bg-green-100 rounded-full">-<%= product.discount %>%</div>
                            <%}%>
                            <img class="h-full hover:h-1/2" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                        </div>
                        <div class="flex justify-between items-center px-4 py-4" style="color: <%= product.textcolor %>; background-color: <%= product.panelcolor %>;">
                            <div>
                                <h3 class="text-lg"><%= product.name %></h3>
                                <h4 class="text-sm">₹ <%= product.price %></h4>
                            </div>
                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white text-black" href="/remove/<%= product._id %>">
                                <i class="ri-subtract-line"></i>
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>


            <div class="mt-8 p-4 bg-gray-100 rounded-lg shadow">
                <h2 class="text-lg font-semibold mb-2 ">Item Price: ₹ <%= itemTotalPrice.toFixed(2) %></h2>
                 <hr/>
                <h2 class=" text-lg font-semibold mb-2 text-green-600">Total Discount: ₹ <%= totalDiscount.toFixed(2) %></h2>
                <hr/>
                <h2 class="pt-4 text-lg font-semibold ">Price to Pay: ₹ <%= priceToPay.toFixed(2) %></h2>
            </div>
        </div>
    </div>

 

</body>
</html>
